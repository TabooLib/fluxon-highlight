{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fluxon",
  "scopeName": "source.fluxon",
  "patterns": [
    { "include": "#comments" },
    { "include": "#annotations" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#variable-reference" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "//.*$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation",
          "begin": "@([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
            "0": { "name": "storage.type.annotation" }
          },
          "end": "(?<=\\))|$",
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "\\b(if|then|else|when|is|for|in|while|break|continue|return|try|catch|finally)\\b"
        },
        {
          "name": "keyword.other",
          "match": "\\b(import|def|fun|val|var|async|sync|await)\\b"
        },
        {
          "name": "support.function",
          "match": "\\b(print)\\b"
        },
        {
          "name": "constant.language",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "variable-reference": {
      "patterns": [
        {
          "name": "variable.other.readwrite",
          "match": "&\\?|&[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "\\b([0-9]+(\\.[0-9]+)?)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.elvis",
          "match": "\\?:"
        },
        {
          "name": "keyword.operator.range",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.chain",
          "match": "::"
        },
        {
          "name": "keyword.operator.arrow",
          "match": "->"
        },
        {
          "name": "keyword.operator.logical",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic",
          "match": "\\+\\=|\\-\\=|\\*\\=|\\/\\=|%\\=|\\+|\\-|\\*|\\/|%"
        },
        {
          "name": "keyword.operator.assignment",
          "match": "="
        },
        {
          "name": "keyword.operator.ternary",
          "match": "\\?|:"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
